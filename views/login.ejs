<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO Meta Tags -->
    <title>Login to Your Account | Nodot Academy</title>
    <meta name="description" content="Login to your Nodot Academy account to access your courses, track your learning progress, and continue your educational journey." />
    <meta name="keywords" content="login, sign in, account, e-learning, online courses, Nodot Academy" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://academy.nodot.in/login" />
    <meta property="og:title" content="Login to Your Account | Nodot Academy" />
    <meta property="og:description" content="Access your Nodot Academy courses and continue your learning journey." />
    <meta property="og:image" content="/images/logo.jpg" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://academy.nodot.in/login" />
    <meta property="twitter:title" content="Login to Your Account | Nodot Academy" />
    <meta property="twitter:description" content="Access your Nodot Academy courses and continue your learning journey." />
    <meta property="twitter:image" content="/images/logo.jpg" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://academy.nodot.in/login" />
    
    <link rel="stylesheet" href="css/login.css" />
    <link rel="stylesheet" href="css/style.css" />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <%- include('partials/header') -%>
    <section id="login">
      <div class="container">
        <h1 class="section-header">Sign In</h1>
        <div id="form">
          <% if (locals.errorMessage) { %>
          <p style="color: red"><%= locals.errorMessage %></p>
          <% } %>
          <% if (locals.error) { %>
            <p style="color: red; text-align: center"><%= locals.error %></p>
            
            <% if (locals.unverified) { %>
              <div style="text-align: center; margin-top: 15px;">
                <form action="/resend-verification" method="POST">
                  <input type="hidden" name="email" value="<%= email %>">
                  <button type="submit" style="background-color: #5624d0; color: white; border: none; padding: 8px 15px; border-radius: 4px; cursor: pointer;">
                    Resend Verification Email
                  </button>
                </form>
              </div>
            <% } %>
          <% } %>
          <form action="/login" method="POST">
            <label for="email">Email</label>
            <div class="input-wrapper">
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Email"
                required
                class="form-input"
                autocomplete="email"
              />
            </div>

            <!-- Password Field -->
            <label for="password">Password</label>
            <div class="password-container">
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Password"
                required
                class="form-input with-icon"
                autocomplete="current-password"
              />
              <i class="fas fa-eye toggle-icon" id="togglePassword"></i>
            </div>

            <div class="submit">
              <input
                id="btn-login"
                style="background-color: #5624d0;; color: white; width: 150px"
                type="submit"
                value="Sign In"
              />
              <a href="/forgotpassword" id="signup">Forgot password?</a>
              <a href="/signup" id="signup"
                >New customer? Sign up for an account</a
              >
            </div>
          </form>
        </div>
      </div>
    </section>

    <button id="scrollBtn">
      <ion-icon name="arrow-up-outline" id="btn-up"></ion-icon>
    </button>

    <%- include('partials/footer') -%>
    <script>
      document
        .getElementById("togglePassword")
        .addEventListener("click", function () {
          let passwordInput = document.getElementById("password");

          if (passwordInput.type === "password") {
            passwordInput.type = "text";
            this.classList.remove("bi-eye");
            this.classList.add("bi-eye-slash"); // Change to eye-slash icon
          } else {
            passwordInput.type = "password";
            this.classList.remove("bi-eye-slash");
            this.classList.add("bi-eye"); // Change back to eye icon
          }
        });
    </script>

    <!-- <script src="script/loginScript.js"></script> -->
  </body>
</html>
