<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= course.name %> | Nodot</title>
    <style>
      body {
        margin: 0;
        font-family: "Segoe UI", sans-serif;
        background-color: #f4f6f8;
      }

      .top-container {
        height: 60vh;
        background: #000;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 40px;
        gap: 40px;
        color: #fff;
      }

      .top-left {
        flex: 2;
      }

      .top-left h1 {
        margin-bottom: 10px;
        font-size: 36px;
        color: #fff;
      }

      .top-left p {
        font-size: 18px;
        color: #ddd;
      }

      .top-right {
        flex: 1;
        margin-top: 20%;
      }

      .info-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
      }

      .course-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
      }

      .info-card h3 {
        margin: 10px 0 5px;
        color: #333;
      }

      .info-card p {
        margin: 4px 0 10px;
        color: #555;
      }

      .enroll-btn {
        background: #007bff;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 6px;
        width: 100%;
        font-size: 16px;
        cursor: pointer;
        margin-top: 20px;
        transition: background 0.3s;
      }

      .enroll-btn:hover {
        background: #0056b3;
      }

      .bottom-section {
        max-width: 950px;
        margin: auto 20px;
        padding: 0 20px;
      }

      .section {
        background-color: white;
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 30px;
        margin-top: 30px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
      }

      .section h2 {
        margin-top: 0;
      }

      ul.learn-list {
        padding-left: 20px;
      }

      ul.learn-list li {
        margin-bottom: 6px;
      }

      .accordion details {
        margin: 10px 0;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 10px;
        background: #f9f9f9;
      }

      .accordion summary {
        font-weight: bold;
        cursor: pointer;
        outline: none;
      }

      @media (max-width: 900px) {
        .top-container {
          flex-direction: column;
          height: auto;
          padding: 40px 20px;
        }

        .top-left,
        .top-right {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <!-- Top Container (60vh) -->
    <div class="top-container">
      <div class="top-left">
        <h1><%= course.name %></h1>
        <p><strong>Description:</strong> <%= course.description %></p>
      </div>
      <div class="top-right">
        <div class="info-card">
          <img
            src="<%= course.image_url %>"
            alt="<%= course.name %>"
            class="course-image"
          />
          <h3>Price</h3>
          <p>₹<%= course.price %></p>

          <h3>Duration</h3>
          <p><%= course.duration %></p>

          <h3>Videos</h3>
          <p><%= course.vedio_duration%></p>

          <h3>Language</h3>
          <p><%= course.language %></p>

          <h3>Instructor</h3>
          <p><%= course.instructor %></p>

          <!-- <button class="enroll-btn">Enroll Now</button> -->
          <form action="/add-to-cart" method="POST">
            <input type="hidden" name="id" value="<%= course.id %>" />
            <input type="hidden" name="name" value="<%= course.name %>" />
            <input type="hidden" name="price" value="<%= course.price %>" />
            <input type="hidden" name="image" value="<%= course.image_url %>" />
            <button type="submit" class="enroll-btn">Add to Cart</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="bottom-section">
      <div class="section">
        <h2>What You’ll Learn</h2>
        <ul class="learn-list">
          <% if (course.what_you_learn) { %> <%
          course.what_you_learn.split('|').forEach(item => { %>
          <li><%= item.trim() %></li>
          <% }) %> <% } else { %>
          <li>No details provided yet.</li>
          <% } %>
        </ul>
      </div>

      <div class="section">
        <h2>Course Content</h2>
        <div class="accordion">
          <% if (sections && sections.length > 0) { %> <%
          sections.forEach(section => { %>
          <details>
            <summary><%= section.title %></summary>
            <ul>
              <% section.modules.forEach(module => { %>
              <li><%= module.title %> - <%= module.duration %></li>
              <% }) %>
            </ul>
          </details>
          <% }) %> <% } else { %>
          <p>Course content will be updated soon.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
