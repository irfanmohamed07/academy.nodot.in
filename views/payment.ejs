<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Page</title>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.10.2/lottie.min.js"></script>

    <style>
      /* Reset some default styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
        margin: 0;
      }

      .container {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
      }

      h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 15px;
      }

      p {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 30px;
      }

      .amount {
        font-size: 1.5rem;
        font-weight: bold;
        color: #00b894;
        margin-bottom: 20px;
      }

      button {
        background-color: #00b894;
        color: #fff;
        border: none;
        padding: 15px 25px;
        font-size: 1.2rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #00fdca;
      }

      .payment-form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .payment-form input[type="hidden"] {
        display: none;
      }

      .payment-form button:focus {
        outline: none;
      }

      /* Modal Styles */
      .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        text-align: center;
      }

      .modal-content {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
      }

      .modal-header {
        font-size: 1.5rem;
        color: #28a745;
        margin-bottom: 20px;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>Payment Page</h1>
      <p>Your total amount to pay is:</p>
      <p class="amount">â‚¹<%= amount %></p>

      <form class="payment-form" action="/process-payment" method="POST">
        <input type="hidden" name="order_id" value="<%= orderId %>" />
        <input type="hidden" name="total" value="<%= amount %>" />
        <button type="button" id="pay-button">Proceed to Pay</button>
      </form>
      <button style="margin-top: 20px" onclick="window.location.href='/';">
        Cancel Payment
      </button>
    </div>

    <!-- Modal for Order Success -->
    <!-- Lottie Modal for Order Success -->
    <div id="orderSuccessModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">Payment Successful!</div>
        <div
          id="lottie-animation"
          style="width: 150px; height: 150px; margin: 20px auto"
        ></div>
        <p>
          Your course has been successfully purchased. Thank you for enrolling
          with us!
        </p>
        <button onclick="window.location.href='/';">Go Back to Home</button>
      </div>
    </div>

    <script>
            // Initialize Razorpay Payment
            const paymentButton = document.getElementById("pay-button");

            paymentButton.onclick = function () {
              const options = {
                key: "<%= key_id %>",   // Razorpay Key ID
                amount: <%= amount * 100 %>, // Total in paise
                currency: "INR",
                name: "nodot Academy",
                description: "Course Payment",
                image: "https://nodot.in/assets/images/logo.jpg", // Optional: Add your logo
                order_id: "<%= orderId %>", // Order ID from the backend
                handler: function (response) {
                  // Send payment response to the backend for verification
                  const { razorpay_payment_id, razorpay_order_id, razorpay_signature } = response;

                  fetch("/process-payment", {
                    method: "POST",
                    headers: {
                      "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                      payment_id: razorpay_payment_id,
                      order_id: razorpay_order_id,
                      signature: razorpay_signature,
                      total: <%= amount %>,
                    }),
                  })
                  .then((res) => res.json())
                  .then((data) => {
                    if (data.status === "success") {
                      showOrderSuccessModal(); // Show success modal
                    } else {
                      alert("Payment failed!");
                    }
                  });
                },
                prefill: {
                  name: "Customer Name", // Optionally add the customer details
                  email: "customer@example.com", // Optionally add the email
                },
                theme: {
                  color: "#F37254", // Customize the button color
                },
              };

              const rzp1 = new Razorpay(options);
              rzp1.open();
            };

            function showOrderSuccessModal() {
        document.getElementById("orderSuccessModal").style.display = "flex";

        lottie.loadAnimation({
          container: document.getElementById("lottie-animation"),
          renderer: "svg",
          loop: false,
          autoplay: true,
          path: "/json/Animation check.json", // Replace with actual path to your animation
        });
      }


            // Function to close the modal
            function closeModal() {
              document.getElementById("orderSuccessModal").style.display = "none";
            }
    </script>
  </body>
</html>
