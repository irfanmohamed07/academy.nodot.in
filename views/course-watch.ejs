<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= course.name %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: #f0f2f5;
      }

      .container {
        /* max-width: 1200px; */
        /* margin: 40px auto; */
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      h1 {
        font-size: 2em;
        margin-bottom: 10px;
      }

      .course-content {
        display: flex;
        gap: 30px;
        margin-top: 30px;
      }

      .video-player {
        flex: 2;
      }

      .video-player video {
        width: 100%;
        height: 400px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .content-list {
        flex: 1;
        max-height: 400px;
        overflow-y: auto;
        padding: 10px;
        background: #f9f9f9;
        border-radius: 10px;
        border: 1px solid #ddd;
      }

      .module-item {
        margin-bottom: 15px;
      }

      .module-item input[type="checkbox"] {
        margin-right: 8px;
      }

      .module-item label {
        cursor: pointer;
        color: #333;
      }

      .module-item label:hover {
        color: #007bff;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1><%= course.name %></h1>
      <p><%= course.description %></p>

      <div class="course-content">
        <!-- Left: Single Video Player -->
        <div class="video-player">
          <video id="mainVideo" controls>
            <source id="videoSource" src="" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>

        <!-- Right: Module List with Checkboxes -->
        <div class="content-list">
          <% sections.forEach(function(section) { %>
          <h3><%= section.title %></h3>
          <% section.modules.forEach(function(module) { %>
          <div class="module-item">
            <input
              type="checkbox"
              id="module_<%= module.id %>"
              onclick="loadVideo('<%= module.video_url %>')"
            />
            <label for="module_<%= module.id %>">
              <%= module.title %> (<%= module.duration %>)
            </label>
          </div>
          <% }); %> <% }); %>
        </div>
      </div>
    </div>

    <script>
      function loadVideo(url) {
        const video = document.getElementById("mainVideo");
        const source = document.getElementById("videoSource");
        source.src = url;
        video.load();
        video.play();
      }

      // Optional: Auto-load first video
      window.onload = function () {
        const firstCheckbox = document.querySelector(
          '.content-list input[type="checkbox"]'
        );
        if (firstCheckbox) {
          firstCheckbox.click();
        }
      };
    </script>
  </body>
</html>
